{% extends base_template %}

{% block content %}
    <div class="connection">
        <form action="{{ path("sonata_user_admin_security_check") }}" method="post">

            {% if error %}
                <div class="alert alert-error">{{ error|trans({}, 'SonataUserBundle') }}</div>
            {% endif %}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="control-group">
                <label for="username">{{ 'Utilizador'|trans({}, 'FOSUserBundle') }}</label>

                <div class="controls">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="big sonata-medium"/>
                </div>
            </div>

            <div class="control-group">
                <label for="password">{{ 'Palavra-Chave'|trans({}, 'FOSUserBundle') }}</label>

                <div class="controls">
                    <input type="password" id="password" name="_password" class="big sonata-medium" />
                </div>
            </div>

            <div class="control-group">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'Manter sess√£o aberta'|trans({}, 'FOSUserBundle') }}
                </label>
            </div>

            <div class="form-actions" style="margin-top: 10px">
                <input type="submit" class="button" id="_submit" style="width: 96%" name="_submit" value="{{ 'Entrar'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </form>
    </div>

    <style>

        div.connection{
            box-shadow: none!important;
            border:none!important;
            -webkit-border-radius: 0 !important;
            -moz-border-radius: 0 !important;
            border-radius: 0 !important;
        }

        #_submit {
            font-size: 1.0625rem;
            text-transform: uppercase;
            color: #fff!important;
            background: #4cc3b8!important;
        }

        #_submit:hover{
            opacity: 0.9;
        }
    </style>


{% endblock content %}
